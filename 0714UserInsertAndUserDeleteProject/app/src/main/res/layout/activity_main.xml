<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/insert_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/insert_layout_title"
            android:textSize="30dp"
            android:text="insertLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/insert_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/insert_layout_title"
            android:text="id" />

        <EditText
            android:id="@+id/insert_id_edit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/insert_layout_title"
            android:layout_toRightOf="@+id/insert_id" />

        <TextView

            android:gravity="center"
            android:id="@+id/insert_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/insert_id"
            android:text="name" />

        <EditText

            android:id="@+id/insert_name_edit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/insert_id"
            android:layout_toRightOf="@+id/insert_name" />

        <TextView

            android:gravity="center"
            android:id="@+id/insert_age"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/insert_name"
            android:text="age" />

        <EditText
            android:id="@+id/insert_age_edit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/insert_name"
            android:layout_toRightOf="@+id/insert_age" />
        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/insert_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="insert"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/delete_layout"
        android:layout_margin="10dp"
        android:layout_below="@+id/insert_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/delete_layout_title"
            android:textSize="30dp"
            android:text="deleteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:gravity="center"
            android:id="@+id/delete_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/delete_layout_title"
            android:text="id" />

        <EditText
            android:id="@+id/delete_id_edit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/delete_layout_title"
            android:layout_toRightOf="@+id/delete_id" />
        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/delete_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_margin="10dp"
        android:layout_below="@+id/delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/search_layout_title"
            android:textSize="30dp"
            android:text="searchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:gravity="center"
            android:id="@+id/search_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/search_layout_title"
            android:text="id" />

        <EditText
            android:id="@+id/search_id_edit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/search_layout_title"
            android:layout_toRightOf="@+id/search_id" />
        <TextView

            android:gravity="center"
            android:layout_below="@+id/search_id"
            android:text="empty"
            android:id="@+id/user_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/search_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/all_view_user_layout"
        android:layout_margin="10dp"
        android:layout_below="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/all_view_user_layout_title"
            android:textSize="30dp"
            android:text="allViewUserLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:gravity="center"
            android:layout_below="@+id/all_view_user_layout_title"
            android:text="empty"
            android:id="@+id/user_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/all_view_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view"/>

    </RelativeLayout>



</RelativeLayout>